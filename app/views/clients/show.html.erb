<h3>Client Details</h3>


<h3>Transaction History for <%= @client.last_name %>, <%= @client.first_name %></h3>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>Date</th>
      <th>Type</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.amount %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.date.try(:strftime, '%Y-%m-%d') %></td>
        <td><%= transaction.class.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to "Create a transaction", new_client_transaction_path(@client)%>
