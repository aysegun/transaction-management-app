<h3>Client Details</h3>


<h3>Transaction History for <%= @client.last_name %>, <%= @client.first_name %></h3>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>Date</th>
      <th>Type</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.amount.to_d %></td>
        <td><%= transaction.description.to_s %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.class %></td>
        <%# <td><%= link_to "Delete", client_destroy_transaction_path(client_id: @client.id, transaction_type: @transaction.class.name.downcase), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this transaction?" } %></td> %>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to "Create a transaction", client_transactions_new_path(@client)%>
